@page "/editproduct/{id}"
@page "/editproduct"

@inherits EditProductBase

<EditForm Model="@EditProductModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>@HeaderText</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">
            Name
        </label>
    </div>
    <div class="col-sm-10">
        <InputText id="name" class="form-control" placeholder="Nhập tên.."
                   @bind-Value="EditProductModel.Name" />
        <ValidationMessage For="@(()=>EditProductModel.Name)" />
    </div>

    <div class="form-group row">
        <label for="price" class="col-sm-2 col-form-label">
            Price
        </label>
    </div>
    <div class="col-sm-10">
        <InputNumber id="price" class="form-control" placeholder="Nhập giá.."
                   @bind-Value="EditProductModel.Price" />
        <ValidationMessage For="@(()=>EditProductModel.Price)" />
    </div>
    <br />

    <button class="btn btn-primary" type="submit">Submit</button>
    @if (EditProductModel.ProductId > 0)
    {
        <button class="btn btn-danger" type="button" @onclick="Delete_Click" style="margin-left:10px;">Delete</button>
    }

</EditForm>
